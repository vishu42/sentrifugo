		var groupid = $('#groupid').val();
		url = base_url+"/holidaygroups/getholidaynames/format/html";
		$.ajax({		
			type: "POST",
			url: url,
			data: 'groupid='+groupid+'&perpage='+perpage+'&pageno='+pageno,
