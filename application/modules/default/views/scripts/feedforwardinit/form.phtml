	}
   
    function checkAll(ele,clas)
    {
 	   
 		var elementid = $(ele).attr('id');  
 		var elementclass = $(ele).attr('class');
 		var clas = clas;
 		if($("#"+elementid).is(":checked"))
           {
           $("."+clas).prop("checked",true); 
           
           $("."+clas).each(function() {
