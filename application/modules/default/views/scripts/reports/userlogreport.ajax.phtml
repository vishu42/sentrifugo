function setuserlogtab()
{
	
	   	var chkArray = [];   
	   	if($("#multifield input:checked").length > 0){ 	  
		   	$("#multifield input:checked").each(function() {
		   		chkArray.push($(this).val());
		   	});   
		
		   	var checkedheaders;
		   	checkedheaders = chkArray.join(',');
		   	$('#fields').val(checkedheaders);
		   	paginationUserLogReport();
	   	}else{
